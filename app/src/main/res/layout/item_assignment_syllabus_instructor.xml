<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="22dp"
    app:cardElevation="4dp"
    android:layout_marginEnd="27dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Unit Testing"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/tv_desc_assignment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_assignment"
            app:layout_constraintStart_toStartOf="@id/tv_title_assignment"
            />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_time_purple"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_assignment"
            app:layout_constraintStart_toStartOf="@id/tv_desc_assignment"/>

        <TextView
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_time"
            app:layout_constraintStart_toEndOf="@id/iv_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_time"/>


        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/due_date"
            app:layout_constraintStart_toEndOf="@id/due_date"
            app:layout_constraintBottom_toBottomOf="@id/due_date"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/tv_due_date"
            app:layout_constraintStart_toEndOf="@id/tv_due_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_due_date"/>


        <ImageButton
            android:id="@+id/btn_update_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/button_image_update_instructor"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_time"
            app:layout_constraintStart_toStartOf="@id/iv_time"/>



        <ImageButton
            android:id="@+id/btn_delete_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/button_image_delete_instructor"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/btn_update_syllabus"
            app:layout_constraintStart_toEndOf="@id/btn_update_syllabus"
            app:layout_constraintTop_toTopOf="@id/btn_update_syllabus"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>